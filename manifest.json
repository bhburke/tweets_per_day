{  
  "manifest_version": 2,

  "name": "Tweets Per Day",
  "description": "A minimal extension that replaces \"Total Tweets\" with \"Tweets per Day\" on Twitter.",
  "version": "0.9",
  "icons" :{
    "128": "icon-128.png",
    "48": "icon-48.png"
  },
  "permissions": [
    "*://twitter.com/*",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": ["*://*.twitter.com/*"],
      "js": ["jquery.min.js", "extension.js"],
      "css": ["detect_insertion.css"]
    }
 ] 
}
