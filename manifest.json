{  
  "manifest_version": 2,

  "name": "Tweets Per Day",
  "description": "Replaces a Twitter user's number of total Tweets on their profile with their average number of Tweets per day.",
  "version": "0.1",
  "icons" :{
    "128": "icon-128.png",
    "48": "icon-48.png"
  },
  "permissions": [
    "*://twitter.com/*",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": ["*://*.twitter.com/*"],
      "js": ["jquery.min.js", "extension.js"],
      "css": ["detect_insertion.css"]
    }
 ] 
}
